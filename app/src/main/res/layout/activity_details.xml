<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.umn.contactview.DetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Name:"
        android:id="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/detailsName"
        android:layout_toStartOf="@+id/detailsName"
        android:layout_above="@+id/detailsPhone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/detailsName"
        android:editable="false"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Phone:"
        android:id="@+id/tv_phone"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/detailsPhone"
        android:layout_toStartOf="@+id/detailsPhone"
        android:layout_above="@+id/detailsTitle" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/detailsPhone"
        android:layout_below="@+id/detailsName"
        android:layout_alignEnd="@+id/detailsName"
        android:text="Phone"
        android:phoneNumber="true"
        android:enabled="true"
        android:editable="false"
        android:layout_alignStart="@+id/detailsName" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTitle"
        android:layout_below="@+id/detailsPhone"
        android:layout_alignEnd="@+id/detailsPhone"
        android:text="Title"
        android:editable="false"
        android:enabled="true"
        android:layout_alignStart="@+id/detailsPhone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/detailsEmail"
        android:layout_below="@+id/detailsTitle"
        android:layout_alignEnd="@+id/detailsTitle"
        android:text="Email"
        android:editable="false"
        android:enabled="true"
        android:layout_alignStart="@+id/detailsTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTwitter"
        android:layout_below="@+id/detailsEmail"
        android:layout_alignEnd="@+id/detailsEmail"
        android:text="Twitter"
        android:editable="false"
        android:enabled="true"
        android:layout_alignStart="@+id/detailsEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:id="@+id/tv_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/detailsEmail"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_phone"
        android:layout_toStartOf="@+id/detailsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/tv_email"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/detailsTwitter"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detailsTitle"
        android:layout_toStartOf="@+id/detailsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:id="@+id/tv_twitter"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/tv_email"
        android:layout_alignEnd="@+id/tv_email"
        android:layout_alignBottom="@+id/detailsTwitter"
        android:layout_alignParentStart="true" />


</RelativeLayout>
