<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.umn.contactview.DetailsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:id="@+id/tv_name"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/detailsName"
        android:editable="false"
        android:enabled="true"
        android:layout_margin="0dp"
        android:layout_alignRight="@+id/tv_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="20dp"
        android:id="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/detailsName"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/detailsPhone"
        android:layout_below="@+id/detailsName"
        android:layout_alignEnd="@+id/detailsName"
        android:enabled="true"
        android:editable="false"
        android:layout_alignStart="@+id/detailsName"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textSize="20dp"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/phone"
        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTitle"
        android:layout_below="@+id/detailsPhone"
        android:layout_alignEnd="@+id/detailsPhone"
        android:editable="false"
        android:enabled="true"
        android:layout_alignStart="@+id/detailsPhone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:id="@+id/tv_email"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/detailsEmail"
        android:layout_below="@+id/detailsTitle"
        android:layout_alignEnd="@+id/detailsTitle"
        android:editable="false"
        android:enabled="true"
        android:textStyle="bold"
        android:layout_alignStart="@+id/detailsTitle"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTwitter"
        android:layout_below="@+id/detailsEmail"
        android:ems="10"
        android:editable="false"
        android:enabled="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/detailsEmail"
        android:layout_toEndOf="@+id/tv_twitter"
        android:layout_alignStart="@+id/detailsEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter"
        android:textSize="20dp"
        android:id="@+id/tv_twitter"
        android:layout_below="@+id/tv_email"
        android:layout_marginTop="20dp" />

</RelativeLayout>
    </ScrollView>
