<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.umn.contactview.EditActivity">

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="17"
        android:id="@+id/editName"
        android:editable="true"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_name"
        android:layout_marginTop="5dp"
        android:selectAllOnFocus="false" />

    <TextView
        android:id="@+id/lbl_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editName"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="17"
        android:id="@+id/editPhone"
        android:layout_below="@+id/lbl_phone"
        android:editable="true"
        android:phoneNumber="true"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="#adf"
       />

    <TextView
        android:id="@+id/lbl_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editPhone"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTitle"
        android:layout_below="@+id/lbl_Title"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"/>

    <TextView
        android:id="@+id/lbl_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editTitle"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="17"
        android:id="@+id/editEmail"
        android:layout_below="@+id/lbl_email"
        android:editable="true"
        android:padding="8dp"
        android:background="#adf"/>

    <TextView
        android:id="@+id/lbl_twitter_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twitter Handle"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/editEmail"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTwitter"
        android:layout_below="@+id/lbl_twitter_handle"
        android:editable="true"
        android:layout_marginTop="5dp"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"/>

</RelativeLayout>
